{% extends "default/index.html.twig" %}

{% block content %}
    <div class="content">
        <div>
            <a href="{{ thread.link }}">{{ thread.title }}</a>
        </div>

        <hr/>
        <h2>Comments</h2>

        {{ render(controller(
            'AppBundle:Default:addComment',
            { 'id': thread.id }
        )) }}

        {% if thread.comments|length == 0 %}
            No comments
        {% else %}
            {% for comment in thread.comments %}
                <div>
                    {{ comment.username }} on {{ comment.date|date("Y-m-d") }}<br/>
                    {{ comment.text }}
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}